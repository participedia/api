{
  "name": "participedia",
  "version": "0.0.2",
  "private": true,
  "description": "API for Participedia v3",
  "keywords": [],
  "author": "David Ascher <david.ascher@gmail.com>",
  "license": "MIT",
  "main": "app.js",
  "engines": {
    "node": "7.10.1"
  },
  "dependencies": {
    "apicache": "^1.1.1",
    "apidoc": "^0.17.5",
    "async": "^2.3.0",
    "aws-sdk": "^2.70.0",
    "babel-cli": "^6.24.1",
    "bluebird": "^3.4.7",
    "body-parser": "^1.16.0",
    "compression": "^1.6.2",
    "cors": "^2.8.1",
    "dotenv": "^4.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.14.1",
    "express-jwt": "^5.1.0",
    "express-unless": "^0.3.0",
    "faucet": "^0.0.1",
    "json-pretty": "^0.0.1",
    "jsonwebtoken": "^7.3.0",
    "jwks-rsa": "^1.1.1",
    "keypair": "^1.0.1",
    "lodash": "^4.17.4",
    "method-override": "^2.3.7",
    "morgan": "^1.7.0",
    "nock": "^9.0.13",
    "nodemon": "^1.11.0",
    "npm": "^5.10.0",
    "pem-jwk": "^1.5.1",
    "pg-connection-string": "^0.1.3",
    "pg-promise": "7.3.2",
    "react-dropzone-s3-uploader": "^1.0.0-rc.3",
    "tape": "^4.6.3",
    "tape-watch": "^2.2.4",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.3",
    "chai": "^4.0.2",
    "chai-http": "^3.0.0",
    "eslint": "^4.1.1",
    "eslint-config-google": "^0.9.1",
    "eslint-config-prettier": "^3.2.0",
    "eslint-plugin-prettier": "^2.0.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "prettier": "^1.7.0"
  },
  "scripts": {
    "start": "./node_modules/apidoc/bin/apidoc -i api -o swagger && nodemon ./node_modules/.bin/babel-node server.js",
    "start-dev": "nave use 6 bash -c 'node-dev server.js'",
    "lint": "eslint \"**.js\"",
    "postinstall": "./node_modules/apidoc/bin/apidoc -i api -o swagger",
    "deployprod": "git push participedia-api",
    "deploystage": "git push participedia-stage",
    "coverage": "NODE_ENV=test istanbul cover _mocha -- -R spec && open coverage/lcov-report/index.html",
    "test": "NODE_ENV=test mocha --timeout 100000",
    "watch": "tape-watch --watch -1 test/**/*.js | faucet ",
    "resettestdb": "dropdb \"participedia-test\"; createdb \"participedia-test\"; psql -d \"participedia-test\" -f setup.sql; DATABASE_URL=postgres://${USER}@localhost:5432/participedia-test node migrations/import_json.js",
    "resettestfunctions": "psql -d participedia-test -f migrations/functions.sql",
    "resetlocalfunctions": "psql -d participedia -f migrations/functions.sql",
    "resetstagefunctions": "psql -d \"${DATABASE_STAGE_URL}\" -f migrations/functions.sql",
    "resetprodfunctions": "psql -d \"${DATABASE_PROD_URL}\" -f migrations/functions.sql",
    "resetlocaldb": "dropdb participedia; createdb participedia; psql -d participedia -f setup.sql; DATABASE_URL=postgres://${USER}@localhost:5432/participedia node migrations/import_json.js",
    "resetproddb": "psql -d \"${DATABASE_PROD_URL}\" -f setup.sql; DATABASE_URL=${DATABASE_PROD_URL} node migrations/import_json.js",
    "resetstagedb": "psql -d \"${DATABASE_STAGE_URL}\" -f setup.sql; DATABASE_URL=${DATABASE_STAGE_URL} node migrations/import_json.js",
    "textdump": "pg_dump --format=p --file=one_schema.sql --clean --create --no-owner --if-exists --dbname=participedia",
    "migrateprod": "f(){ printf -v item \"%03d\" $1; psql -d \"${DATABASE_PROD_URL}\" -f \"migrations/migration_${item}.sql\"; };f",
    "migratestage": "f(){ printf -v item \"%03d\" $1; psql -d \"${DATABASE_STAGE_URL}\" -f \"migrations/migration_${item}.sql\"; };f",
    "migratelocal": "f(){ printf -v item \"%03d\" $1 && echo ${item} && psql -d \"${DATABASE_URL}\" -f \"migrations/migration_${item}.sql\"; };f",
    "migratetest": "f(){ printf -v item \"%03d\" $1; psql -d \"${DATABASE_TEST_URL}\" -f \"migrations/migration_${item}.sql\"; };f"
  }
}
